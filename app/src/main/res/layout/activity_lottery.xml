<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sample.gwxlotteryproject.ui.LotteryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/min_line_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            android:src="@drawable/min_line_mark" />

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/girl_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="154dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:src="@drawable/girl_image" />

        <ImageView
            android:id="@+id/move_kuji_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/min_line_mark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:longClickable="false"
            android:src="@drawable/kuji_stick" />

        <ImageView
            android:id="@+id/kujibiki_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/move_kuji_stick"
            android:layout_alignTop="@+id/move_kuji_stick"
            android:scaleType="fitXY"
            android:src="@drawable/kujibiki_image" />

    </RelativeLayout>

</layout>
